{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    //    "target": "ES2020",
    "target": "es5",
    "useDefineForClassFields": true,
    "lib": [
      "es5",
      "dom",
      "DOM.Iterable"
    ],
    "types": [
      "vite/client",
//      "vite-plugin-svgr/client",
      "node",
//      "cypress"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {

    },
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src",
    ".eslintrc.cjs",
    "vite.config.ts",
//    "postcss.config.cjs",
//    "config/vars.cjs",
    "**/*.ts",
//    "cypress.d.ts",
//    "src/**/*.cy.{js,ts,jsx,tsx}"
  ],
  "exclude": [
//    "cypress.config.ts",
    "node_modules"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
